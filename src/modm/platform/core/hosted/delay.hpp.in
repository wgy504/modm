#include <unistd.h>

namespace modm
{

/// @cond
void modm_always_inline
delayNanoseconds(uint16_t /*ns*/)
{
	usleep(1);
}

modm_always_inline void
delayMicroseconds(uint16_t us)
{
	usleep(us);
}

modm_always_inline void
delayMilliseconds(uint16_t ms)
{
	usleep(uint32_t(ms) * 1000);
}
